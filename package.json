{
  "name": "ssb-patchwork",
  "version": "1.0.2",
  "description": "",
  "main": "app/index.js",
  "scripts": {
    "start": "electron .",
    "test": "set -e; for t in api/test/*.js; do node $t; done",
    "clean": "rm -Rf ./dist",
    "clean:osx": "rm -Rf ./dist/osx",
    "clean:win": "rm -Rf ./dist/win",
    "build": "npm run clean && npm run build:ui && npm run build:osx && npm run build:win",
    "build:ui": "mkdir -p ./ui/css && lessc ./ui/less/main.less ./ui/css/main.css",
    "build:icon": "./scripts/make-icns.sh assets/icon1024.png assets/osx/patchwork.icns",
    "build:osx": "electron-packager ./ Patchwork --out=dist/osx --platform=darwin --arch=x64 --ignore=node_modules/electron* --ignore=dist --version=0.34.2 --icon=assets/osx/patchwork.icns",
    "build:win": "electron-packager ./ Patchwork --out=dist/win --platform=win32 --arch=ia32 --ignore=node_modules/electron* --ignore=dist --version=0.34.2 --icon=assets/win/patchwork.ico",
    "build:nix": "electron-packager ./ patchwork --out=dist/linux --platform=linux --arch=x64 --ignore=node_modules/electron* --ignore=dist --version=0.34.2 --icon=assets/osx/patchwork.icns",
    "pack": "npm run pack:osx && npm run pack:win",
    "pack:osx": "electron-builder \"dist/osx/Patchwork.app\" --platform=osx --out=\"dist/osx\" --config=packager.json",
    "pack:win": "electron-builder \"dist/win/Patchwork-win32\" --platform=win --out=\"dist/win\" --config=packager.json"
  },
  "author": "Paul Frazee <pfrazee@gmail.com>",
  "license": "?",
  "devDependencies": {
    "electron-builder": "^2.1.1",
    "electron-packager": "^4.1.3",
    "electron-prebuilt": "^0.34.2",
    "less": "~1.7.5",
    "osenv": "~0.1.0",
    "rimraf": "~2.2.8",
    "tape": "~3.0.0"
  },
  "dependencies": {
    "babel": "^5.8.23",
    "blob-to-buffer": "^1.2.3",
    "emoji-named-characters": "^1.0.1",
    "hyperscript": "~1.4.6",
    "ip": "^1.0.2",
    "mime-types": "^2.1.3",
    "moment": "^2.10.6",
    "multiblob": "^1.5.0",
    "multicb": "^1.1.0",
    "muxrpc": "^6.1.1",
    "nicedate": "~0.0.0",
    "observable": "^2.1.3",
    "once": "~1.3.1",
    "patchwork-threads": "^1.0.0",
    "pause-offscreen": "^1.0.0",
    "phoenix-router": "~1.0.0",
    "published-working-tree": "~0.0.0",
    "pull-cat": "^1.1.7",
    "pull-identify-filetype": "^1.0.0",
    "pull-ipc": "0.0.1",
    "pull-level": "~1.2.0",
    "pull-merge": "~1.0.2",
    "pull-notify": "0.0.0",
    "pull-paramap": "^1.1.3",
    "pull-pushable": "^1.1.4",
    "pull-stream": "^2.27.0",
    "pull-stream-to-stream": "~1.3.0",
    "react": "^0.14.2",
    "react-addons-css-transition-group": "^0.14.2",
    "react-dom": "^0.14.2",
    "react-infinite": "^0.5.10",
    "react-modal": "^0.6.0",
    "react-router": "^1.0.0-rc1",
    "scuttlebot": "~7.3.3",
    "ssb-config": "^1.0.3",
    "ssb-keys": "^4.0.3",
    "ssb-marked": "~0.5.0",
    "ssb-msg-schemas": "~6.0.0",
    "ssb-msgs": "~5.1.0",
    "ssb-ref": "~2.2.0",
    "stack": "^0.1.0",
    "stream-to-pull-stream": "^1.6.1",
    "suggest-box": "~1.1.6",
    "xtend": "^4.0.0"
  }
}
