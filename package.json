{
  "name": "ssb-patchwork",
  "version": "2.7.0",
  "description": "safe secure sharing",
  "main": "app/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ssbc/patchwork.git"
  },
  "scripts": {
    "build-release": "npm run build-release:js && npm run build-release:css",
    "build-release:js": "NODE_ENV=production browserify ./ui/main.js --extension=.jsx -o ./ui/main.build.js",
    "build-release:css": "mkdir -p ./ui/css && lessc ./ui/less/main.less --autoprefix ./ui/css/main.css",
    "build": "npm run build:js && npm run build:css",
    "build:js": "NODE_ENV=development browserify ./ui/main.js --extension=.jsx --debug -o ./ui/main.build.js",
    "build:css": "mkdir -p ./ui/css && lessc ./ui/less/main.less ./ui/css/main.css",
    "watch": "npm run watch:server & npm run watch:ui",
    "watch:ui": "npm run watch:js & npm run watch:css",
    "watch:server": "nodemon -q -w api -w './*.js'",
    "watch:js": "NODE_ENV=development watchify ./ui/main.js --extension=.jsx -o ./ui/main.build.js -v --debug",
    "watch:css": "mkdir -p ./ui/css && nodemon -q -e less -w ./ui/less -x 'lessc --verbose ./ui/less/main.less ./ui/css/main.css'",
    "start": "node ./index.js",
    "test": "set -e; for t in api/test/*.js; do node $t; done",
    "prepublish": "npm run build-release"
  },
  "author": "Paul Frazee <pfrazee@gmail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "envify": "^3.4.0",
    "less": "^2.5.3",
    "nodemon": "^1.8.1",
    "osenv": "~0.1.0",
    "rimraf": "~2.2.8",
    "tape": "~3.0.0",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "babel": "^5.8.23",
    "blob-to-buffer": "^1.2.3",
    "classnames": "^2.2.3",
    "emoji-named-characters": "^1.0.1",
    "history": "1.13.1",
    "hyperscript": "~1.4.6",
    "image-loaded": "0.0.2",
    "ip": "^1.0.2",
    "less-plugin-autoprefix": "^1.5.1",
    "mime-types": "^2.1.3",
    "moment": "^2.10.6",
    "multiblob": "^1.8.0",
    "multicb": "^1.1.0",
    "muxrpc": "^6.1.1",
    "ngraph.graph": "0.0.12",
    "ngraph.svg": "0.0.15",
    "nicedate": "~0.0.0",
    "observable": "^2.1.3",
    "once": "~1.3.1",
    "patchwork-threads": "^2.0.0",
    "pause-offscreen": "^1.0.0",
    "phoenix-router": "~1.0.0",
    "published-working-tree": "~0.0.0",
    "pull-cat": "^1.1.7",
    "pull-identify-filetype": "^1.0.0",
    "pull-level": "~1.4.1",
    "pull-merge": "~1.0.2",
    "pull-notify": "~0.0.2",
    "pull-paramap": "^1.1.3",
    "pull-pushable": "^1.1.4",
    "pull-serializer": "^0.3.2",
    "pull-stream": "^2.27.0",
    "pull-stream-to-stream": "~1.3.0",
    "pull-ws-server": "^1.6.2",
    "react": "^0.14.3",
    "react-addons-css-transition-group": "^0.14.3",
    "react-clipboard.js": "^0.1.7",
    "react-dom": "^0.14.3",
    "react-infinite": "^0.5.10",
    "react-modal": "^0.6.0",
    "react-notification": "^4.2.0",
    "react-router": "1.0.2",
    "scuttlebot": "~7.6.4",
    "ssb-config": "^1.2.1",
    "ssb-keys": "^5.0.0",
    "ssb-markdown": "^3.0.0",
    "ssb-msg-schemas": "~6.1.0",
    "ssb-msgs": "~5.2.0",
    "ssb-ref": "~2.3.0",
    "stack": "^0.1.0",
    "stream-to-pull-stream": "1.6.6",
    "suggest-box": "^2.0.0",
    "text-node-searcher": "~1.1.0",
    "xtend": "^4.0.0"
  },
  "bin": {
    "patchwork": "./index.js"
  },
  "browserify": {
    "transform": [
      [
        "envify",
        {
          "global": true
        }
      ],
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-0",
            "react"
          ]
        }
      ]
    ]
  }
}
