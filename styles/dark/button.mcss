button {
  color: #5f5f5f;
  padding: 3px 6px;
  background: white;
  border: 2px solid #DDD;
  border-radius: 3px;
  font-size: 130%
  cursor: pointer

  :hover {
    color: black
    border-color: #8B8B8B
  }

  :focus {
    outline: 1px dotted rgba(255, 255, 255, 0.45)
  }

  :active {
    background-color: #DDD !important
  }

  [disabled] {
    color: #999797 !important;
    background: #e3e2e2 !important;
    border-color: #DDD !important;
  }

  -add {
    color: #6a7e6a;
    background-color: #ecfff0;
    border-color: #8ba289;
  }

  -pub {
    color: #aaa
    background-color: #2d2c2c
    border: 0
    margin-top: 0
    padding: 10px
    transition: background-color 0.25s ease, color 0.25s ease

    :hover {
      color: white
      background-color: #45b754
    }
  }

  -save {
    border-color: #a7c7a6;
    background-color: #eeffee;
    color: #255D24;

    :active {
      background-color: #c6e0c5 !important
    }

    :hover {
      border-color: #3ac737;
      background-color: #d4ffd4;
      color: #21921f;
    }
  }

  -full {
    display: block
    width: 100%
    margin: 0 0 15px
  }
}
