Thread {
  flex: 1
  max-width: 700px
  width: 100%
  margin: 10px auto
  border-radius: 3px
  border: 1px solid
  border-color: #e5e6e9 #dfe0e4 #d0d1d5;

  a.full {
    display: block;
    padding: 10px;
    background: #daecd6;
    border-top: 1px solid #bbc9d2;
    border-bottom: 1px solid #bbc9d2;
    text-align: center;
    color: #759053;
  }
}
